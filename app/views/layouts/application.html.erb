<!DOCTYPE html>
<html>
<head>
  <title>Young Hearts</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script type="text/javascript" src="http://twitter.github.com/bootstrap/assests/js/bootstrap-dropdown.js">
  </script>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
    <div id="banner">
      <div class="row">
        <div class="span2">
          <%= link_to image_tag(asset_path "223_young_hearts.jpg"), home_path %>
        </div>
        <div class="span6">
          <h2>The Young Hearts Foundation</h2>
        </div>
      </div>
    </div>
    <div id="rows">
      <div id="top">
        <ul>
          <li> <%= link_to 'Home', home_path %> </li>
          <li> <%= link_to 'Story', story_path %> </li>
          <li> <%= link_to 'Events', events_path %> </li>
          <li> <%= link_to 'Contact', contact_path %> </li>

          <% if user_signed_in? %>
            <li>
              <%= current_user.email %>: <%= link_to "Edit User", edit_user_registration_path %> |
              <%= link_to "Logout", destroy_user_session_path, {:method => :delete} %>
            </li>
          <% end %>

          <% if admin_signed_in? %>
            <li>
              <%= current_admin.email %>: <%= link_to "Edit Admin", edit_admin_registration_path %> |
              <%= link_to "Logout", destroy_admin_session_path, {:method => :delete} %>
            </li>
          <% end %>

        </ul>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
</body>
</html>
